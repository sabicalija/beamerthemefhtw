% Background
% ------------------------------------------------------------------------------------------------------------------- %
\defbeamertemplate{background}{fhtw-random}{
    \placetikzbackground{=1}{
        \coordinate (start) at ($(current page.south west)+(0.1,0.1)$);
        \coordinate (end)   at ($(current page.north east)+(-0.1,-0.1)$);
        % Colored rectangles
        \pgfmathdeclarerandomlist{colors}{%
            {ttw-blue} {ttw-violett} {ttw-green} {ttw-red} {ttw-gray} {ttw-lightblue}%
            {ttw-lightorange} {ttw-lightgreen} {ttw-yellow} {ttw-darkcyan}
        }%
        \pgfmathsetmacro\frameheight{((\paperheight-0.2cm)/1cm/\beamer@fhtw@frameamount}
        \foreach \ci in {1,2,...,\beamer@fhtw@frameamount} {
            \pgfmathrandomitem{\randomcolor}{colors}
            \draw[draw=none,fill=\randomcolor] ($(end)+(0,-(\ci*\frameheight)$) rectangle ++(-\beamer@fhtw@framewidth,\frameheight);
        }
        % Frame
        \draw[draw=black,line width=0.2mm,anchor=north west] (start) rectangle (end);%
    }
}
