% Logo
% ------------------------------------------------------------------------------------------------------------------- %
\defbeamertemplate{logo}{simple}{%
    \placetikzbackground[overlay,remember picture]{=1}{%
        \node[anchor=center] at ($(current page.north west)+(0,-2)+(70pt,-40pt)$) {%
            \includegraphics[width=60pt]{\beamer@fhtw@logofile}};%
        }%
}%
% ------------------------------------------------------------------------------------------------------------------- %
% Background
% ------------------------------------------------------------------------------------------------------------------- %
\defbeamertemplate{background}{simple}{
    \placetikzbackground{=1}{
        \def\gridsize{\beamer@fhtw@gridsize}
        \pgfmathsetmacro\aratio{\paperheight/\paperwidth}
        \pgfmathsetmacro\rwidth{\paperwidth/\gridsize/1cm}
        
        \pgfmathsetmacro\sgridsize{round(\gridsize*\aratio)}
        \pgfmathsetmacro\rheight{\paperheight/\sgridsize/1cm}

        \usebeamercolor[bg]{palette secondary}
        \draw[fill=bg,rounded corners=40pt] ($(current page.north west)+(0.5,-3)$) rectangle ++(1.5\paperwidth,-80pt);

        \usebeamercolor[bg]{palette primary}
        \draw[fill=bg,rounded corners=40pt] ($(current page.north west)+(1,-2)$) rectangle ++(1.5\paperwidth,-80pt);

        \draw[draw=none,fill=white] ($(current page.north west)+(0.5,-3)+(55pt,-11pt)$) circle(35pt);
    }%
}
% ------------------------------------------------------------------------------------------------------------------- %
% Title Page
% ------------------------------------------------------------------------------------------------------------------- %
\defbeamertemplate{title page}{simple}{
    \begin{tikzpicture}[
        base/.style={text width=0.85\textwidth,anchor=north west,align=left}
    ]%
        \useasboundingbox (0,0) rectangle(\paperwidth,\paperheight);%
        \coordinate[xshift=18ex, yshift=-5em] (top) at (current page.north west);
        \node[draw=\beamer@fhtw@frames,text=white,align=left,text width=0.9\textwidth,anchor=north west] at (top) {\usebeamerfont{title}\insertshorttitle};
        \node[draw=\beamer@fhtw@frames,text=white,align=left,text width=0.9\textwidth,anchor=north west] at ($(top)+(0,-3em)$) {\usebeamerfont{subtitle}\insertsubtitle};

        \node[draw=\beamer@fhtw@frames,text=white,align=left,text width=0.9\textwidth,anchor=north west] at ($(top)+(0,-7.25em)$) {\usebeamerfont{date}\insertdate};
        
        \coordinate[xshift=18ex, yshift=9em] (bottom) at (current page.south west);
        \usebeamercolor[bg]{palette tertiary}
        \node[draw=\beamer@fhtw@frames,text=bg,align=left,text width=0.9\textwidth,anchor=south west] at (bottom) {\usebeamerfont{author}\insertauthor};
        \node[draw=\beamer@fhtw@frames,text=bg,align=left,text width=0.9\textwidth,anchor=south west] at ($(bottom)+(0,-2em)$) {\usebeamerfont{mail}\insertmail};
        \node[draw=\beamer@fhtw@frames,text=bg,align=left,text width=0.9\textwidth,anchor=south west] at ($(bottom)+(0,-4em)$) {\usebeamerfont{institute}\insertinstitute};
    \end{tikzpicture}%
    \insertlogo
}
